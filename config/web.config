CONFIG_LDFLAGS_DRYSTAL=-s TOTAL_MEMORY=67108864

CONFIG_EMSCRIPTEN=1

# either
CONFIG_EXTENSION_FILE=main.so
# or this
#CONFIG_FAST_LINK=1
#CONFIG_EXTENSION_FILE=main.js
