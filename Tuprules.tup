CFLAGS+=@(CFLAGS)
CFLAGS+=-Wall -Wextra
CFLAGS+=-O2
CFLAGS+=-std=c++11
CFLAGS+=-I../external -I../external/lua/src

LDFLAGS=@(LDFLAGS)

LDFLAGS_DRYSTAL=@(LDFLAGS_DRYSTAL)
LDFLAGS_DRYSTAL+=-Lexternal -llua-drystal

!cxx = |> @(CXX) $(CFLAGS) -c %f -o %o |> %B.o

!ld_drystal = |> @(LD) $(LDFLAGS) $(LDFLAGS_DRYSTAL) %f @(LD_EXTENSIONS) -o @(TARGET) |> @(TARGET)
!ld_shared = |> @(LD) $(LDFLAGS) -shared %f -o %o |>

