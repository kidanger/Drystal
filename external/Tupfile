include_rules

CORE_C= lua/src/lapi.c \
        lua/src/lcode.c \
        lua/src/lctype.c \
        lua/src/ldebug.c \
        lua/src/ldo.c \
        lua/src/ldump.c \
        lua/src/lfunc.c \
        lua/src/lgc.c \
        lua/src/llex.c \
        lua/src/lmem.c \
        lua/src/lobject.c \
        lua/src/lopcodes.c \
        lua/src/lparser.c \
        lua/src/lstate.c \
        lua/src/lstring.c \
        lua/src/ltable.c \
        lua/src/ltm.c \
        lua/src/lundump.c \
        lua/src/lvm.c \
        lua/src/lzio.c
LIB_C=  lua/src/lauxlib.c \
        lua/src/lbaselib.c \
        lua/src/lbitlib.c \
        lua/src/lcorolib.c \
        lua/src/ldblib.c \
        lua/src/liolib.c \
        lua/src/lmathlib.c \
        lua/src/loslib.c \
        lua/src/lstrlib.c \
        lua/src/ltablib.c \
        loadlib_patched.c \
        lua/src/linit.c

DEFINES=-DLUA_COMPAT_ALL -DLUA_USE_DLOPEN
CFLAGS=-Wall $(DEFINES) -fPIC -I. -Ilua/src

# patch lua's dlopen usage
: lua/src/loadlib.c |> patch %f dlopen_emscripten.patch -o %o |> loadlib_patched.c

: foreach $(CORE_C) $(LIB_C) |> @(CC) -c %f -o %o $(CFLAGS) |> %B.o
ifdef FAST_LINK
: *.o |> !ld_shared |> liblua.js
else
: *.o |> !ld_shared |> liblua-drystal.so ../<lua>
endif
